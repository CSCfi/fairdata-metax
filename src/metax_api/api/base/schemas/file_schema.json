{
    "@id":"http://iow.csc.fi/ns/mfs#",
    "title":"Metax File Storage Metadata",
    "modified":"Tue, 18 Apr 2017 16:58:24 EEST",
    "$schema":"http://json-schema.org/draft-04/schema#",
    "type":"object",
    "allOf": [
        {
            "$ref": "#/definitions/FileCharacteristics"
        }
    ],
    "definitions":{
        "Checksum":{
            "title":"Checksum",
            "@id":"http://spdx.org/rdf/terms#Checksum",
            "description":"Checksum of the file",
            "properties":{
                "checksum_value":{
                    "title":"Checksum value",
                    "description":"Value of the checksum. xsd:hexBinary",
                    "@id":"http://spdx.org/rdf/terms#checksumValue",
                    "@type":"http://www.w3.org/2001/XMLSchema#hexBinary",
                    "minItems":1,
                    "maxItems":1
                },
                "checksum_algorithm":{
                    "title":"Checksum algorithm",
                    "description":"Used checksum algortihm",
                    "@id":"http://spdx.org/rdf/terms#algorithm",
                    "enum":[
                        "md5",
                        "sha2"
                    ],
                    "@type":"http://www.w3.org/2001/XMLSchema#string",
                    "minItems":1,
                    "maxItems":1,
                    "type":"string"
                },
                "checksum_checked":{
                    "title":"Checksum checked",
                    "description":"Last time the file checksum is validated",
                    "@id":"http://iow.csc.fi/ns/mfs#checksumchecked",
                    "@type":"http://www.w3.org/2001/XMLSchema#dateTime",
                    "minItems":1,
                    "maxItems":1,
                    "type":"string",
                    "format":"date-time"
                }
            },
            "required":[
                "checksum_value",
                "checksum_algorithm",
                "checksum_checked"
            ]
        },
        "File":{
            "title":"File",
            "@id":"http://www.w3.org/2000/01/rdf-schema#Resource",
            "description":"The class of File",
            "properties":{
                "identifier":{
                    "title":"Identifier",
                    "description":"A persistent identifier (PID) in urn: scheme",
                    "@id":"http://purl.org/dc/terms/identifier",
                    "enum":[
                        "urn:nbn:fi:csc:1235xyz"
                    ],
                    "@type":"@id",
                    "minItems":1,
                    "maxItems":1
                },
                "file_name":{
                    "title":"File name",
                    "description":"File name including the extension",
                    "@id":"http://iow.csc.fi/ns/mfs#fileName",
                    "@type":"http://www.w3.org/2001/XMLSchema#string",
                    "minItems":1,
                    "maxItems":1,
                    "type":"string"
                },
                "file_path":{
                    "title":"File Path",
                    "description":"Path to the item as file: URI",
                    "@id":"http://iow.csc.fi/ns/mfs#filePath",
                    "@type":"http://www.w3.org/2001/XMLSchema#string",
                    "minItems":1,
                    "maxItems":1,
                    "type":"string"
                },
                "replication_path":{
                    "title":"Replication path",
                    "description":"Identifier in file: scheme for the place that the file is replicated",
                    "@id":"http://iow.csc.fi/ns/mfs#replicationpath",
                    "@type":"http://www.w3.org/2001/XMLSchema#anyURI",
                    "maxItems":1
                },
                "file_uploaded":{
                    "title":"Date uploaded",
                    "description":"date when data was uploaded",
                    "@id":"http://iow.csc.fi/ns/mfs#dateUploaded",
                    "@type":"http://www.w3.org/2001/XMLSchema#dateTime",
                    "minItems":1,
                    "maxItems":1,
                    "type":"string",
                    "format":"date-time"
                },
                "file_modified":{
                    "title":"Date modified",
                    "description":"Date on which the resource was changed.",
                    "@id":"http://purl.org/dc/terms/modified",
                    "@type":"http://www.w3.org/2001/XMLSchema#dateTime",
                    "minItems":1,
                    "maxItems":1,
                    "type":"string",
                    "format":"date-time"
                },
                "file_frozen":{
                    "title":"Date frozen",
                    "description":"date when the file is frozen",
                    "@id":"http://iow.csc.fi/ns/mfs#datefrozen",
                    "@type":"http://www.w3.org/2001/XMLSchema#dateTime",
                    "minItems":1,
                    "maxItems":1,
                    "type":"string",
                    "format":"date-time"
                },
                "file_deleted":{
                    "title":"Date deleted",
                    "description":"date when the frozen file was deleted",
                    "@id":"http://iow.csc.fi/ns/mfs#datedeleted",
                    "@type":"http://www.w3.org/2001/XMLSchema#dateTime",
                    "maxItems":1,
                    "type":"string",
                    "format":"date-time"
                },
                "file_characteristics":{
                    "title":"Optional metadata",
                    "description":"Optional file metadata and file format specific charasteristics",
                    "@id":"http://www.loc.gov/premis/rdf/v1#hasObjectCharacteristics",
                    "@type":"@id",
                    "type":"object",
                    "$ref":"#/definitions/FileCharacteristics"
                },
                "file_format":{
                    "title":"File format",
                    "description":"File format, must usually IANA mediatype",
                    "@id":"http://schema.org/fileFormat",
                    "@type":"http://www.w3.org/2001/XMLSchema#string",
                    "minItems":1,
                    "maxItems":1,
                    "type":"string"
                },
                "byte_size":{
                    "title":"Byte size",
                    "description":"The size of a resource in bytes.",
                    "@id":"http://www.w3.org/ns/dcat#byteSize",
                    "@type":"http://www.w3.org/2001/XMLSchema#string",
                    "minItems":1,
                    "maxItems":1,
                    "type":"string"
                },
                "is_stored_to":{
                    "title":"Is Stored To",
                    "description":"A related storage system",
                    "@id":"http://purl.org/dc/terms/isPartOf",
                    "@type":"@id",
                    "type":"object",
                    "$ref":"#/definitions/FileStorage"
                },
                "download_url":{
                    "title":"Download url",
                    "description":"If the file can be downloaded, URL to download the binary.",
                    "@id":"http://schema.org/downloadUrl",
                    "@type":"http://www.w3.org/2001/XMLSchema#anyURI",
                    "maxItems":1
                },
                "project_identifier":{
                    "title":"Project identifier",
                    "description":"Group that is used to restrict the access to the files. In IDA this is the same as Project identifier.",
                    "@id":"http://iow.csc.fi/ns/mfs#group",
                    "@type":"http://www.w3.org/2001/XMLSchema#string",
                    "minItems":1,
                    "maxItems":1,
                    "type":"string"
                },
                "checksum":{
                    "title":"checksum",
                    "description":"Checksum of the file",
                    "@id":"http://spdx.org/rdf/terms#checksum",
                    "@type":"@id",
                    "type":"object",
                    "$ref":"#/definitions/Checksum"
                },
                "open_access":{
                    "title":"Open access",
                    "description":"This should be true if data is open and accessible. If attribute is not present it should be interpreted as implicit false.",
                    "@id":"http://iow.csc.fi/ns/mfs#openaccess",
                    "@type":"http://www.w3.org/2001/XMLSchema#boolean",
                    "maxItems":1,
                    "type":"boolean"
                },
                "file_characteristics_extension":{
                    "title":"Metadata Extension",
                    "description":"Format-specific metadata that is defined externally. Can be represented as ObjectCharacteristicsExtension in PREMIS format.",
                    "@id":"http://www.loc.gov/premis/rdf/v1#objectCharacteristicsExtension",
                    "@type":"@id",
                    "type":"object",
                    "$ref":"#/definitions/FileCharacteristicsExtension"
                }
            },
            "required":[
                "identifier",
                "file_name",
                "file_path",
                "file_uploaded",
                "file_modified",
                "file_frozen",
                "file_format",
                "byte_size",
                "is_stored_to",
                "project_identifier",
                "checksum"
            ]
        },
        "FileCharacteristics":{
            "title":"File Characteristics",
            "@id":"http://www.loc.gov/premis/rdf/v1#ObjectCharacteristics",
            "description":"This class is used as extension point to additional file charasteristics",
            "properties":{
                "title":{
                    "title":"Title",
                    "description":"A name given to the file",
                    "@id":"http://purl.org/dc/terms/title",
                    "@type":"http://www.w3.org/2001/XMLSchema#string",
                    "maxItems":1,
                    "type":"string"
                },
                "description":{
                    "title":"Description",
                    "description":"Free-text account of the distribution.",
                    "@id":"http://purl.org/dc/terms/description",
                    "@type":"http://www.w3.org/2001/XMLSchema#string",
                    "maxItems":1,
                    "type":"string"
                },
                "encoding":{
                    "title":"Text encoding",
                    "description":"Used text encoding",
                    "@id":"http://schema.org/encoding",
                    "@type":"http://www.w3.org/2001/XMLSchema#string",
                    "maxItems":1,
                    "type":"string"
                },
                "application_name":{
                    "title":"Application name",
                    "description":"A designation for the name of the software program that created the object",
                    "@id":"http://www.loc.gov/premis/rdf/v1#hasCreatingApplicationName",
                    "@type":"http://www.w3.org/2001/XMLSchema#string",
                    "maxItems":1,
                    "type":"string"
                },
                "file_created":{
                    "title":"File Created",
                    "description":"Original creation date of the file",
                    "@id":"http://purl.org/dc/terms/created",
                    "@type":"http://www.w3.org/2001/XMLSchema#dateTime",
                    "maxItems":1,
                    "type":"string",
                    "format":"date-time"
                },
                "metadata_modified":{
                    "title":"Metadata Modified",
                    "description":"Date on which the File Charasteristics have been last updated",
                    "@id":"http://purl.org/dc/terms/modified",
                    "@type":"http://www.w3.org/2001/XMLSchema#dateTime",
                    "maxItems":1,
                    "type":"string",
                    "format":"date-time"
                },
                "open_access":{
                    "title":"Open access",
                    "description":"This should be true if data is open and accessible. If attribute is not present it should be interpreted as implicit false.",
                    "@id":"http://iow.csc.fi/ns/mfs#openaccess",
                    "@type":"http://www.w3.org/2001/XMLSchema#boolean",
                    "maxItems":1,
                    "type":"boolean"
                }
            }
        },
        "FileStorage":{
            "title":"File storage",
            "@id":"http://iow.csc.fi/ns/mfs#FileStorage",
            "description":"File storage system",
            "properties":{
                "identifier":{
                    "title":"Identifier",
                    "description":"Persistent identifier for the storage system",
                    "@id":"http://purl.org/dc/terms/identifier",
                    "@type":"@id",
                    "minItems":1,
                    "maxItems":1
                },
                "title":{
                    "title":"Title",
                    "description":"A name given to the resource.",
                    "@id":"http://purl.org/dc/terms/title",
                    "@type":"http://www.w3.org/2001/XMLSchema#string",
                    "minItems":1,
                    "maxItems":1,
                    "type":"string"
                },
                "url":{
                    "title":"Access url",
                    "description":"URL of the storage system",
                    "@id":"http://schema.org/url",
                    "@type":"http://www.w3.org/2001/XMLSchema#anyURI",
                    "maxItems":1
                }
            },
            "required":[
                "identifier",
                "title"
            ]
        },
        "langString":{
            "type":"object",
            "title":"Multilingual string",
            "description":"Object type for localized strings",
            "additionalProperties":{
                "type":"string"
            }
        }
    }
}